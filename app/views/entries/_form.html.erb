<%= form_for(entry) do |f| %>
  <div class="actions">
    <%= f.submit 'Done', onClick: "event.preventDefault(); this.form.querySelector('#content').value = this.form.querySelector('#editable').innerHTML; this.form.submit()" %>
  </div>
  <%= f.hidden_field :account_id %>

  <div class="field title-field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <%= f.hidden_field :content, id: 'content' %>
  <section class="editor">
    <div id="editable"></div>
  </section>

<% end %>

<script>var editor = new MediumEditor('#editable', { placeholder: { text: "It was the best of times..."}});</script>
